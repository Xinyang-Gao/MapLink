{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    
    "name": "${mod_name}",
    "description": "${description}",
    "authors": $authors,
    
    "contact": {
        "homepage": "${homepage}",
        "sources": "${source}",
        "issues": "${issues}"
    },
    
    "license": "${mod_license}",
    "icon": "assets/${mod_id}/icon.png",
    
    "accessWidener": "${mod_id}.accesswidener",
    
    "environment": "*",
    "entrypoints": {
        "client": [
            "${group}.fabric.FabricMain"
        ],
        "server": [
            "${group}.fabric.FabricMain"
        ],
        "modmenu": [
            "${group}.fabric.wrappers.ModMenuIntegration"
        ]
    },
    
    "mixins": [
        "${mod_id}.fabric.mixins.json"
    ],
    
    "depends": {
        "fabricloader": "*",
        "minecraft": $compatible_minecraft_versions,
        "java": ">=${java_version}",
        "cloth-config": "*"
    },
    
    "breaks": $fabric_incompatibility_list,
    "recommends": $fabric_recommend_list
}
